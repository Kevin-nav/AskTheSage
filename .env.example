# This is an example file. Copy this to a new file named .env and fill in your actual credentials.

# Your PostgreSQL connection string
# Format: postgresql://user:password@host:port/database_name
DATABASE_URL="postgresql://bot_user:a_very_strong_password@localhost:5432/adaptive_bot_local_db"

# Your Telegram Bot Token from BotFather
TELEGRAM_BOT_TOKEN="YOUR_TELEGRAM_BOT_TOKEN_HERE"

# (Optional) S3 Bucket details for image caching
S3_BUCKET_NAME="your-s3-bucket-name-here"
AWS_REGION="your-aws-region-here"

# JWT Authentication Configuration (for Admin Dashboard)
SECRET_KEY="YOUR_SUPER_SECRET_KEY_HERE" # IMPORTANT: Generate a strong, random key (e.g., using `openssl rand -hex 32`)
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Admin & Feedback Configuration
ADMIN_USERNAMES="admin1,admin2"
TELEGRAM_ADMIN_GROUP_ID="YOUR_GROUP_ID_HERE" # Must be a negative integer for groups
